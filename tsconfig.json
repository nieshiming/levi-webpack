{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist/",
    "noImplicitAny": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Node",
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "paths": {
      "@/*": ["src/*"],
      "enums/*": ["src/enum/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
