{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/",
    "noImplicitAny": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Node",
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["./src"]
}
